<html>
  <head>
    <title>Videos from <%= username %>!</title>
    <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css">
  </head>
  <body>
    <div class="container">
      <header>
        <h1>Videos from <%= username %></h1>
      </header>
      <div class="row">
        <div class="span14">
          <% videos.forEach(function (v) { %>
          <div class="video well">
            <h2><%= v.title %> <small>uploaded <%= v.upload_date %></small></h2>
            <div class="row">
              <div class="span9">
                <%- v.embed %>
              </div>
              <div class="span4">
                <p><strong><%- v.description || "No description available. :C"%></strong></p>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
